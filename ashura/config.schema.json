{
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "version": {
            "description": "Version of the engine this config file is made for. This will be used in inter-engine version conversion",
            "type": "string"
        },
        "gpu": {
            "description": "GPU Configuration",
            "type": "object",
            "properties": {
                "validation": {
                    "description": "Enable GPU validation layers",
                    "type": "boolean",
                    "default": false
                },
                "vsync": {
                    "description": "Enable GPU VSync",
                    "type": "boolean",
                    "default": false
                },
                "preferences": {
                    "description": "Device preferences, selected in the specified order",
                    "type": "array",
                    "items": {
                        "enum": [
                            "dgpu",
                            "vgpu",
                            "igpu",
                            "other",
                            "cpu"
                        ]
                    },
                    "minItems": 1,
                    "maxItems": 5,
                    "default": [
                        "dgpu",
                        "vgpu",
                        "igpu",
                        "other",
                        "cpu"
                    ]
                },
                "hdr": {
                    "description": "Use HDR",
                    "type": "boolean",
                    "default": true
                },
                "buffering": {
                    "description": "GPU Swapchain Buffering",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 4,
                    "default": 2
                }
            },
            "additionalProperties": false,
            "required": [
                "validation",
                "vsync",
                "preferences",
                "hdr",
                "buffering"
            ]
        },
        "window": {
            "description": "Window configuration",
            "type": "object",
            "properties": {
                "resizable": {
                    "description": "Enable window resizing",
                    "type": "boolean",
                    "default": true
                },
                "maximized": {
                    "description": "Maximize window during startup",
                    "type": "boolean",
                    "default": false
                },
                "width": {
                    "description": "Initial width of the window",
                    "type": "integer",
                    "default": 1920,
                    "minimum": 0,
                    "maximum": 8192
                },
                "height": {
                    "description": "Initial height of the window",
                    "type": "integer",
                    "default": 1080,
                    "maximum": 8192
                }
            },
            "additionalProperties": false,
            "required": [
                "resizable",
                "maximized",
                "width",
                "height"
            ]
        },
        "shaders": {
            "description": "Locations of the compiled shaders to be loaded at startup",
            "type": "object"
        },
        "fonts": {
            "description": "Locations of the fonts to be loaded at startup",
            "type": "object"
        },
        "default_font": {
            "description": "The default font for the Engine",
            "type": "string"
        },
        "images": {
            "description": "Locations of the images to be loaded at startup",
            "type": "object"
        }
    },
    "additionalProperties": false,
    "required": [
        "version",
        "gpu",
        "window",
        "shaders",
        "fonts",
        "default_font",
        "images"
    ]
}